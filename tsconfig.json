{
  "extends": "@daotl/tsconfig/vue.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-component-preview/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pwa/client",
      "element-plus/global"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.vue", "./.storybook/*.ts"],
  "exclude": ["dist", "node_modules"]
}
