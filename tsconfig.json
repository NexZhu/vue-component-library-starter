{
  "extends": "@daotl/tsconfig/vue.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "cypress",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}